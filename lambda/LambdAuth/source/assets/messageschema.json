{
    "type":"object",
    "properties":{
        "action":{
            "type":"string",
            "enum":["create","delete","changePassword","changeEmail","resetPassword","get","createMFA","valMFA","session"]
        },
        "id":{
            "type":"string",
            "pattern":"^[A-Za-z][A-Za-z0-9._]{3,14}$"
        },
        "email":{
            "type":"string",
            "format":"email"
        },
        "salt":{
            "type":"sting",
            "minLength":"1"
        },
        "verifier":{
            "type":"sting",
            "minLength":"1"
        },
        "token":{
            "type":"sting",
            "pattern":"^[0-9]{6,6}$"
        },
        "B":{
            "type":"sting",
            "minLength":"1"
        },
        "group":{
            "type":"sting",
            "enum":["admin","user"]
        }
    },
    "required":[
        "action","id"
    ],
    "dependencies":{
        "salt":["verifier"],
        "verifier":["salt"]
    },
    "additionalProperties":false
}    
