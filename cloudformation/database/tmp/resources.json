"Resources":{ 
"DB" : {
    "Type" : "AWS::RDS::DBInstance",
    "Properties" : {
        "AllocatedStorage" : "5",
        "DBInstanceClass" : "db.t2.micro",
        "Engine" : "MySQL",
        "EngineVersion":"5.7",
        "MultiAZ":{"Fn::If" : [
            "CreateProdResources",
            "true",
            "false"
            ]
        },
        "DBSnapshotIdentifier":{"Fn::If" : [
            "CreateFromBackup",
            {"Ref":"SnapshotIdentifier"},
            {"Ref":"AWS::NoValue"}
            ]
        },
        "MasterUsername" :      { "Ref" : "DBMasterUser" },
        "MasterUserPassword" :  { "Ref" : "DBMasterPassword" },
        "DBName":               { "Ref" : "DBName" },
        "VPCSecurityGroups":[{"Ref":"DBSG"}],
        "DBSubnetGroupName":{"Ref":"DBsubnet"},
        "PubliclyAccessible":"false"
    }
},
"DBsubnet":{
    "Type" : "AWS::RDS::DBSubnetGroup",
    "Properties" : {
        "DBSubnetGroupDescription" : "DB subnet",
        "SubnetIds" : [ 
            {"Fn::Join":["",[
                {"Fn::ImportValue":
                    {"Fn::Sub":"${NetworkStackName}-subnet1"}
                }
            ]]}
        ,
            {"Fn::Join":["",[
                {"Fn::ImportValue":
                    {"Fn::Sub":"${NetworkStackName}-subnet2"}
                }
            ]]}
        ]
    }
}



,
"LambdAuth":{
  "Type" : "AWS::Lambda::Function",
  "Properties" : {
    "Code" : {
        "S3Bucket" : {"Ref":"ArtifactsBucket"},
        "S3Key" : "watchtower/lambda/lambda-auth_latest.zip"
    },
    "Environment" : {
        "Variables":{
        } 
    },
    "Handler" : "handler.handler",
    "Role" : {"Fn::GetAtt":["LambdaAuthRole","Arn"]},
    "Runtime" : "nodejs4.3",
    "VpcConfig" :{
        "SecurityGroupIds":[{"Ref":"RDSlambdaSG"}],
        "SubnetIds":[ 
            {"Fn::Join":["",[
                {"Fn::ImportValue":
                    {"Fn::Sub":"${NetworkStackName}-subnet1"}
                }
            ]]}
        ,
            {"Fn::Join":["",[
                {"Fn::ImportValue":
                    {"Fn::Sub":"${NetworkStackName}-subnet2"}
                }
            ]]}
        ]
    }
  }
}
,
"LambdaAuthRole":{
    "Type": "AWS::IAM::Role",
    "Properties": {
         "AssumeRolePolicyDocument": { 
            "Version" : "2012-10-17",
            "Statement": [ {
                "Effect": "Allow",
                "Principal": {
                    "Service": [ "lambda.amazonaws.com" ]
                },
                "Action": [ "sts:AssumeRole" ]
            }]
        },
        "Path": "/",
        "ManagedPolicyArns":[
            "arn:aws:iam::aws:policy/CloudWatchLogsFullAccess",
            "arn:aws:iam::aws:policy/service-role/AWSLambdaVPCAccessExecutionRole"
        ]
    }
}
,
"DBSG":{
    "Type" : "AWS::EC2::SecurityGroup",
    "Properties" : {
        "GroupDescription":"Allows traffic through load balancer",
        "SecurityGroupIngress" : [
            {
                "SourceSecurityGroupId":{"Ref":"RDSlambdaSG"}, 
                "FromPort" : "3306",
                "ToPort" : "3306",
                "IpProtocol" : "tcp"
            }
        ],
        "VpcId" :{"Fn::Join":["",[
                {"Fn::ImportValue":
                    {"Fn::Sub":"${NetworkStackName}-VPC"}
                }
            ]]}
    }
},
"RDSlambdaSG":{
    "Type" : "AWS::EC2::SecurityGroup",
    "Properties" : {
        "GroupDescription":"na",
        "SecurityGroupIngress" : [],
        "VpcId" :{"Fn::Join":["",[
            {"Fn::ImportValue":
                {"Fn::Sub":"${NetworkStackName}-VPC"}
            }
        ]]}
    }
}

}