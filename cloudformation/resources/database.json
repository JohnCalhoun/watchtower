/*
    dynamodb tables to host backend for titandb
        streams to lambda for 
            logging
            backup/versioning
*/
"edgestore":{
    "Type" : "AWS::DynamoDB::Table",
    "Properties" : {
        "TableName":{"Fn::Join":["_",[
            {"Ref":"AWS::StackName"}, 
            "edgestore"
        ]]},
        "ProvisionedThroughput":{
            "ReadCapacityUnits":"1",
            "WriteCapacityUnits":"1"
        },
        "AttributeDefinitions" : [ 
            {
                "AttributeName" : "hk",
                "AttributeType" : "S"
            },
            {
                "AttributeName" : "rk",
                "AttributeType" : "S"
            }
        ],
        "KeySchema" : [ 
            {
                "AttributeName" : "hk",
                "KeyType" : "HASH"
            },
            {
                "AttributeName" : "rk",
                "KeyType" : "RANGE"
            }
        ]
    }
},
