/*
    Create lambdas
        SWF
        CognitoPool
        CognitoProvider

    dynamodb streams
*/
"CreateHealthCheck":{
      "Type" : "AWS::Lambda::Function",
      "Properties" : {
        "Code" : {
            "S3Bucket":{"Fn::FindInMap":["Buckets","assets","name"]},
            "S3Key":"disclosure/lambda/createhealthcheck.zip"
        },
        "FunctionName":{"Fn::Join":["-",[
                "CreateHealthCheck", 
                {"Ref":"AWS::StackName"}
            ]]},
        "Handler" : "handler.handler",
        "MemorySize" : "128",
        "Role" : {"Fn::GetAtt":["CreateHealthCheckRole","Arn"]},
        "Runtime" : "nodejs4.3",
        "Timeout" : "100"
      }
},
